<h1>Cocktails</h1>

<table>
  <thead>
    <tr class="table-primary">
      <th>Name</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @cocktails.each do |cocktail| %>
      <%= render 'card', cocktail: cocktail %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cocktail', new_cocktail_path %>
